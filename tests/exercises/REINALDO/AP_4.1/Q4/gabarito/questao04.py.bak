nome = input('Entre com o nome: ')
idade = float(input('Entre com a idade: '))
sexo = input('Entre com o sexo (m ou f): ')

if sexo == 'm':
    maiorIdade = 18
else:
    maiorIdade = 21

if idade < maiorIdade:
    print(f'Faltam {maiorIdade - idade:.1f} anos para {nome} atingir a maioridade')
else:
    print(f'{nome} tem maioridade civil')